{
  "title": "DocuChat Backend Overview",
  "tags": ["docuchat", "backend"],
  "timezone": "browser",
  "refresh": "30s",
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "title": "Request Rate",
      "type": "graph",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
      "targets": [
        {
          "expr": "rate(http_request_duration_seconds_count[5m])",
          "legendFormat": "{{method}} {{endpoint}} ({{status}})"
        }
      ],
      "yaxes": [
        {"label": "Requests/s", "format": "short"},
        {"show": false}
      ]
    },
    {
      "id": 2,
      "title": "Response Time (P50, P95, P99)",
      "type": "graph",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
      "targets": [
        {
          "expr": "histogram_quantile(0.50, sum by (le, endpoint, method) (rate(http_request_duration_seconds_bucket[5m])))",
          "legendFormat": "P50"
        },
        {
          "expr": "histogram_quantile(0.95, sum by (le, endpoint, method) (rate(http_request_duration_seconds_bucket[5m])))",
          "legendFormat": "P95"
        },
        {
          "expr": "histogram_quantile(0.99, sum by (le, endpoint, method) (rate(http_request_duration_seconds_bucket[5m])))",
          "legendFormat": "P99"
        }
      ],
      "yaxes": [
        {"label": "Duration (s)", "format": "s"},
        {"show": false}
      ]
    },
    {
      "id": 3,
      "title": "Error Rate by Status Code",
      "type": "graph",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
      "targets": [
        {
          "expr": "rate(http_request_duration_seconds_count{status=~\"4..\"}[5m])",
          "legendFormat": "4xx - {{endpoint}}"
        },
        {
          "expr": "rate(http_request_duration_seconds_count{status=~\"5..\"}[5m])",
          "legendFormat": "5xx - {{endpoint}}"
        }
      ],
      "yaxes": [
        {"label": "Errors/s", "format": "short"},
        {"show": false}
      ]
    },
    {
      "id": 4,
      "title": "Active Pods",
      "type": "stat",
      "gridPos": {"h": 4, "w": 6, "x": 12, "y": 8},
      "targets": [
        {
          "expr": "count(up{job=\"docuchat-backend\"} == 1)"
        }
      ],
      "options": {
        "colorMode": "background",
        "graphMode": "none"
      }
    },
    {
      "id": 5,
      "title": "Total Requests (24h)",
      "type": "stat",
      "gridPos": {"h": 4, "w": 6, "x": 18, "y": 8},
      "targets": [
        {
          "expr": "sum(increase(http_request_duration_seconds_count[24h]))"
        }
      ],
      "options": {
        "colorMode": "background",
        "graphMode": "area"
      }
    },
    {
      "id": 6,
      "title": "CPU Usage",
      "type": "graph",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
      "targets": [
        {
          "expr": "rate(container_cpu_usage_seconds_total{pod=~\"docuchat-backend-.*\"}[5m])",
          "legendFormat": "{{pod}}"
        }
      ],
      "yaxes": [
        {"label": "CPU Cores", "format": "short"},
        {"show": false}
      ]
    },
    {
      "id": 7,
      "title": "Memory Usage",
      "type": "graph",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16},
      "targets": [
        {
          "expr": "container_memory_usage_bytes{pod=~\"docuchat-backend-.*\"}",
          "legendFormat": "{{pod}}"
        }
      ],
      "yaxes": [
        {"label": "Memory", "format": "bytes"},
        {"show": false}
      ]
    }
  ]
}
