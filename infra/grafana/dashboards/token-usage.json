{
  "title": "OpenAI Token Usage & Billing",
  "tags": ["docuchat", "openai", "billing"],
  "timezone": "browser",
  "refresh": "1m",
  "time": {
    "from": "now-24h",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "title": "Token Consumption by Tenant",
      "type": "graph",
      "gridPos": {"h": 10, "w": 24, "x": 0, "y": 0},
      "targets": [
        {
          "expr": "rate(openai_tokens_total[5m])",
          "legendFormat": "{{tenant}} - {{direction}} ({{model}})"
        }
      ],
      "yaxes": [
        {"label": "Tokens/s", "format": "short"},
        {"show": false}
      ]
    },
    {
      "id": 2,
      "title": "Total Tokens (24h) by Tenant",
      "type": "bargauge",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 10},
      "targets": [
        {
          "expr": "sum by (tenant) (increase(openai_tokens_total[24h]))",
          "legendFormat": "{{tenant}}"
        }
      ],
      "options": {
        "orientation": "horizontal",
        "displayMode": "gradient"
      }
    },
    {
      "id": 3,
      "title": "Estimated Cost (24h) - Tomans",
      "type": "bargauge",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 10},
      "targets": [
        {
          "expr": "sum by (tenant) (increase(openai_tokens_total[24h])) / 1000 * 20",
          "legendFormat": "{{tenant}}"
        }
      ],
      "options": {
        "orientation": "horizontal",
        "displayMode": "gradient"
      }
    },
    {
      "id": 4,
      "title": "ML Model Fallbacks",
      "type": "graph",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 18},
      "targets": [
        {
          "expr": "rate(ml_fallback_total[5m])",
          "legendFormat": "{{from_model}} â†’ {{to_model}} ({{tenant}})"
        }
      ],
      "yaxes": [
        {"label": "Fallbacks/s", "format": "short"},
        {"show": false}
      ]
    },
    {
      "id": 5,
      "title": "OpenAI Request Duration",
      "type": "graph",
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 18},
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum by (le, model, tenant) (rate(openai_request_duration_seconds_bucket[5m])))",
          "legendFormat": "P95 - {{model}}"
        },
        {
          "expr": "histogram_quantile(0.99, sum by (le, model, tenant) (rate(openai_request_duration_seconds_bucket[5m])))",
          "legendFormat": "P99 - {{model}}"
        }
      ],
      "yaxes": [
        {"label": "Duration (s)", "format": "s"},
        {"show": false}
      ]
    },
    {
      "id": 6,
      "title": "OpenAI Request Success Rate",
      "type": "stat",
      "gridPos": {"h": 6, "w": 8, "x": 0, "y": 26},
      "targets": [
        {
          "expr": "sum(rate(openai_request_total{status=\"success\"}[5m])) / sum(rate(openai_request_total[5m])) * 100"
        }
      ],
      "options": {
        "colorMode": "background",
        "graphMode": "area",
        "unit": "percent"
      }
    },
    {
      "id": 7,
      "title": "RAG Queries (5m)",
      "type": "stat",
      "gridPos": {"h": 6, "w": 8, "x": 8, "y": 26},
      "targets": [
        {
          "expr": "sum(rate(rag_query_total[5m])) * 300"
        }
      ],
      "options": {
        "colorMode": "background",
        "graphMode": "area"
      }
    },
    {
      "id": 8,
      "title": "Total Document Chunks",
      "type": "stat",
      "gridPos": {"h": 6, "w": 8, "x": 16, "y": 26},
      "targets": [
        {
          "expr": "sum(document_chunks_total)"
        }
      ],
      "options": {
        "colorMode": "background",
        "graphMode": "none"
      }
    }
  ]
}
